<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".PageU2a">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/beachday"
        android:text="DreamTeam"
        android:textColor="#E87224"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


    <RadioGroup
        android:id="@+id/radiogroup2"
        android:layout_width="319dp"
        android:layout_height="311dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <RadioButton
            android:id="@+id/rb21"
            android:layout_width="175dp"
            android:layout_height="59dp"
            android:fontFamily="@font/beachday"
            android:text="Option 1"
            android:textColor="#FFEB3B"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb22"
            android:layout_width="175dp"
            android:layout_height="59dp"
            android:fontFamily="@font/beachday"
            android:text="Option 2"
            android:textColor="#FFEB3B"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb23"
            android:layout_width="175dp"
            android:layout_height="59dp"
            android:fontFamily="@font/beachday"
            android:text="Option 3"
            android:textColor="#FFEB3B"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb24"
            android:layout_width="175dp"
            android:layout_height="59dp"
            android:fontFamily="@font/beachday"
            android:text="Option 4"
            android:textColor="#FFEB3B"
            android:textSize="30sp" />

    </RadioGroup>

    <Button
        android:id="@+id/submit_answers_button"
        android:layout_width="186dp"
        android:layout_height="75dp"
        android:background="#2196F3"
        android:fontFamily="@font/beachday"
        android:text="Submit"
        android:textColor="#FFEB3B"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932" />

    <TextView
        android:id="@+id/QuestionU2"
        android:layout_width="355dp"
        android:layout_height="152dp"
        android:background="#549BD5"
        android:fontFamily="@font/beachday"
        android:text="Question displayed here"
        android:textColor="#FFEB3B"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208" />

</androidx.constraintlayout.widget.ConstraintLayout>